<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="9dp"
    android:paddingLeft="9dp"
    android:paddingRight="9dp">

    <TextView
        android:id="@+id/right_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="9dp"
        android:text="@string/about_me"
        android:textColor="@color/text_color_gray_k"
        android:textSize="18sp" />

    <com.nettactic.mall.widget.MyGridView
        android:id="@+id/gridview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@color/no_color"
        android:divider="@color/no_color"
        android:listSelector="@color/no_color"
        android:numColumns="3" />

</LinearLayout>