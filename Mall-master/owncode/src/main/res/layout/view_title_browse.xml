<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@color/edit_bg"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:adjustViewBounds="true"
        android:drawableLeft="@mipmap/browse_back"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingBottom="13dp"
        android:paddingLeft="15dp"
        android:paddingRight="2dp"
        android:paddingTop="13dp"
        android:text="@string/back"
        android:textColor="@color/title_blue_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/left_ll"
        android:layout_toRightOf="@+id/back"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="6"
        android:singleLine="true"
        android:textColor="@color/text_color_gray_e"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/left_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/edit_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:adjustViewBounds="true"
            android:drawableLeft="@mipmap/save"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingLeft="2dp"
            android:paddingRight="10dp"
            android:paddingTop="13dp"
            android:text="@string/save"
            android:textColor="@color/title_blue_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/buy"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:adjustViewBounds="true"
            android:drawableLeft="@mipmap/buy"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingLeft="2dp"
            android:paddingRight="10dp"
            android:paddingTop="13dp"
            android:text="@string/buy"
            android:textColor="@color/title_blue_color"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>